{
  "name": "react-starting-template",
  "version": "0.1.0",
  "description": "Standard React App",
  "scripts": {
    "dev": "cross-env NODE_PATH=. next dev",
    "start": "cross-env NODE_PATH=. next",
    "build": "cross-env NODE_PATH=. next build",
    "test": "cross-env NODE_PATH=. jest",
    "export": "cross-env NODE_PATH=. next export",
    "deploy": "yarn build && yarn export && now ./out",
    "lint": "eslint --ext .js,.jsx pages components context hooks __tests__ --fix",
    "fmt": "prettier --write '{pages,components,context,hooks,__tests__}/**/*.{jsx,js}'"
  },
  "author": "Miggy Reyes",
  "license": "ISC",
  "dependencies": {
    "axios": "0.18.0",
    "cross-env": "5.2.0",
    "dotenv": "7.0.0",
    "next": "8.0.4",
    "prop-types": "15.7.2",
    "react": "16.8.6",
    "react-dom": "16.8.6"
  },
  "devDependencies": {
    "@babel/core": "7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "^24.7.1",
    "babel-preset-env": "1.7.0",
    "babel-preset-stage-2": "6.24.1",
    "chai": "4.2.0",
    "esdoc-standard-plugin": "1.0.0",
    "eslint": "5.9.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-plugin-chai-friendly": "0.4.1",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-react": "7.11.1",
    "husky": "1.3.1",
    "jest": "^24.7.1",
    "lint-staged": "8.1.4",
    "now": "15.0.4",
    "prettier": "1.16.4",
    "pretty-format": "24.0.0",
    "react-test-renderer": "^16.8.6",
    "react-testing-library": "6.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "yarn lint"
    ],
    "*.{js,jsx,json,css,md}": [
      "yarn fmt",
      "git add"
    ]
  }
}
